{
  "hyprland/workspaces": {
    "all-outputs": true,
    "format": "{name}"
  },
  "hyprland/window": {
    "on-click": "rofi -show drun"
  },
  "pulseaudio": {
    "format": "{icon}",
    "format-icons": {
      "default-muted": "󰖁",
      "default": "󰕾"
    },
    "on-click": "pavucontrol",
    "tooltip-format": "{volume}%"
  },
  "network": {
    "format-wifi": "󰖩",
    "format-disconnected": "󰖪",
    "on-click": "ghostty --title=impala -e impala",
    "tooltip-format": "{essid}"
  },
  "bluetooth": {
    "format": "",
    "format-off": "󰂲",
    "on-click": "blueman-manager",
    "tooltip-format-enumerate-connected": "{device_alias}",
    "tooltip-format": "{device_enumerate}"
  },
  "hyprland/language": {
    "format-en": "[EN]",
    "format-ru": "[RU]",
    "on-click": "hyprctl switchxkblayout keychron-keychron-k3-pro next"
  },
  "clock": {
    "format": "{:%H:%M}",
    "format-alt": "{:%H:%M:%S}",
    "tooltip-format": "{:%A, %B %d, %Y}",
    "interval": 1
  },
  "custom/notifications": {
    "format": "",
    "tooltip": false,
    "on-click": "swaync-client -t"
  }
}